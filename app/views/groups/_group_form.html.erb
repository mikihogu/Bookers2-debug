<%= form_with model:group do |f| %>
  <%= render 'layouts/errors', obj: group %>
  <div class="form-group">
    <%= f.label :group_name %>
    <%= f.text_field :name,  autocomplete: :off, class: "form-control name" %>
  </div>
  <div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, class: "form-control introduction" %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :group_image, class: "form-control-file group_image", accept: 'image/*' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-info' %>
  </div>
<% end %>