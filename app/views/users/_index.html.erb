<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td class="following-count_<%= user.id %>">
          フォロー数：<%= user.following.count %>
        </td>
        <td class="followers-count_<%= user.id %>">
          フォロワー数：<%= user.followers.count %>
        </td>
        <% if current_page?(users_path) %>
        <!--% unless current_page?(search_path) %>-->
          <td class="follow-btn_<%= user.id %>">
            <%= render 'relationships/follow-btn', user: user %>
          </td>
        <% end %>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
