<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  <tr>
    <th>follows</th>
    <th><%= link_to user.following.count, follows_user_path(user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, followers_user_path(user) %></th>
  </tr>
</table>

<% if user == current_user %>
  <div class='row'>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
<% elsif user != current_user %>
  <div>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), class: "btn btn-info", method: :delete %>
      <% if user.following?(current_user) %>
        <% if haveRoom == true %>
          <%= link_to "チャットルームへ？", room_path %>
        <% else %>
          <%= form_with model: room do |f| %>
            <%= fields_for entry do |e| %>
              <%= e.hidden_field :user_id, value: user_id %>
            <% end %>
            <%= f.submit "チャットを始める" %>
          <% end %>
        <% end %>
      <% end %>
      <!--%= render 'messages/message_link', user: user, haveRoom: haveRoom %>-->
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-success", method: :post %>
    <% end %>
  </div>
<% end %>
