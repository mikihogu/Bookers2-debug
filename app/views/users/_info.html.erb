<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  <tr>
    <th>follows</th>
    <th><%= link_to user.following.count, follows_user_path(user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, followers_user_path(user) %></th>
  </tr>
</table>

<% unless user == current_user %>
  <table>
    <% if current_user.following?(user) %>
      <tr>
        <th><%= link_to "フォロー外す", user_relationships_path(user.id), class: "btn btn-primary btn-sm", method: :delete %></th>
        <th>
          <% if user.following?(current_user) %>
            <%= render 'messages/message_link', user: user, haveRoom: haveRoom, room: room, entry: entry, user_id: user_id %>
          <% end %>
        </th>
      </tr>
    <% else %>
      <tr>
        <td><%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-success btn-sm", method: :post %></td>
        <td></td>
      </tr>
    <% end %>
  </table>
<% end %>
<div class='row mt-3'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
